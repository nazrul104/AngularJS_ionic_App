    /* Large Devices, Wide Screens */
    @media only screen and (min-width : 1200px) {
	.menu-box {
            background: rgba(0, 0, 0, 0) none repeat scroll 0 0;
            border: medium none;
            margin: 6px 0;
        }
	.navbar-inverse .navbar-nav > li > a {
	  border-radius: 4px;
	  color: #fff;
	  margin: 0 4px;
	  padding: 10px 8px;
          font-weight: bold;
	}
	.navbar-inverse .navbar-nav > .active > a, .navbar-inverse .navbar-nav > .open > a, .navbar-inverse .navbar-nav > .open > a:hover, .navbar-inverse .navbar-nav > li > a:hover {
		color:#ed193a;
	}
	.dropdown-menu {
	  background: #A01B1B;
	}
	.dropdown-menu > li > a {
	  color: #fff;
	}
	.dropdown-menu > li > a:focus, .dropdown-menu > li > a:hover {
	  background-color: #d51f25;
	  color: #fff;
	}
	.navbar-nav {
	  margin: 7.5px -15px;
	}
	.navbar-inverse .navbar-nav {
	  background: none;
	}
    }
